@model Wad.iFollow.Web.Models.user
@{
    ViewBag.Title = "Home Page";
}
        <script src="@Url.Content("~/Scripts/jquery-2.0.3.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-2.0.3.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
        @Styles.Render("~/Scripts/bootstrap")
        @Styles.Render("~/Content/themes/bootstrap")
<div style="color:red;font-size:large">@ViewBag.Message</div>
@Html.Partial("~/Views/Account/_LoginPartial.cshtml",Model)
<div class="row-fluid" style="float:left">
	<div id="myCarousel" class="carousel slide" style="width:400px">
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active" style="margin-top:0px"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner">
			<div class="item active">
              <img src="@Url.Content("Images/wad_intro_1.jpg")" width="100%">
			</div>

            @for (var i = 2; i <= 3; i++)
            {
                <div class="item">
                    <img src="@Url.Content("Images/wad_intro_"+i+".jpg")" width="100%">
			    </div> 
            }
		</div>

	</div>
	</div>
<script type='text/javascript'>
    $(function () {
        $('.carousel').carousel({
            interval: 3000
        });
    });
</script>